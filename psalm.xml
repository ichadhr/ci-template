<?xml version="1.0"?>
<psalm
    errorLevel="4"
    resolveFromConfigFile="true"
    findUnusedVariablesAndParams="true"
    findUnusedCode="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="app" />
        <directory name="public" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UndefinedFunction>
            <errorLevel type="suppress">
                <referencedFunction name="App\Controllers\helper" />
                <referencedFunction name="App\Controllers\config" />
                <referencedFunction name="App\Controllers\view" />
                <referencedFunction name="Modules\User\Controllers\redirect" />
                <referencedFunction name="Modules\User\Controllers\lang" />
                <referencedFunction name="Modules\User\Controllers\successDelimiter" />
                <referencedFunction name="Modules\User\Controllers\errorDelimiter" />
                <referencedFunction name="Modules\User\Controllers\set_value" />
                <referencedFunction name="helper" />
                <referencedFunction name="config" />
                <referencedFunction name="lang" />
                <referencedFunction name="base_url" />
                <referencedFunction name="session" />
                <referencedFunction name="form_open" />
                <referencedFunction name="form_input" />
                <referencedFunction name="form_close" />
                <referencedFunction name="form_checkbox" />
                <referencedFunction name="site_url" />
                <referencedFunction name="current_url" />
                <referencedFunction name="uri_string" />
                <referencedFunction name="csrf_token" />
                <referencedFunction name="menuActive" />
                <referencedFunction name="menuBase" />
            </errorLevel>
        </UndefinedFunction>
    </issueHandlers>
</psalm>
